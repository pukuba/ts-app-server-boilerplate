{
  "name": "ts-app-server-boilerplate",
  "version": "1.0.0",
  "main": "index.ts",
  "repository": "https://github.com/pukuba/ts-app-server-boilerplate.git",
  "author": "SeungWon <pukuba@kakao.com>",
  "license": "MIT",
  "packageManager": "yarn@3.6.1",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --ext .ts \"./**/*.ts\"",
    "ci:lint": "eslint --ext .ts \"./**/*.ts\" --output-file eslint_report.json --format json",
    "dev": "nodemon",
    "build:dev": "yarn clean && webpack-cli --config ./webpack/dev.js",
    "build": "yarn clean &&  webpack-cli --config ./webpack/build.js",
    "clean": "rimraf ./dist && rimraf ./node_modules && rimraf ./tsconfig.tsbuildinfo",
    "codegen": "graphql-codegen --config codegen.yml",
    "test": "jest --detectOpenHandles --forceExit",
    "lint-staged": "lint-staged",
    "prisma:generate": "pnpify prisma generate",
    "prisma:push": "pnpify prisma db push"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.4",
    "@prisma/client": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "fastify": "^4.20.0",
    "graphql": "^16.7.1",
    "graphql-scalars": "^1.22.2",
    "hyperid": "^3.1.1",
    "ioredis": "^5.3.2",
    "lodash": "^4.17.21",
    "mercurius": "^13.1.0",
    "paseto": "^3.1.4",
    "pino": "^8.14.1",
    "pino-pretty": "^10.2.0",
    "prisma": "^5.0.0",
    "ts-pattern": "^5.0.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.22.7",
    "@babel/preset-typescript": "^7.22.5",
    "@eslint/js": "^8.46.0",
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/introspection": "^4.0.0",
    "@graphql-codegen/schema-ast": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.4.0",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@yarnpkg/pnpify": "^4.0.0-rc.48",
    "babel-loader": "^9.1.2",
    "babel-plugin-lodash": "^3.3.4",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "graphql-codegen": "^0.4.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.22",
    "pnp-webpack-plugin": "^1.7.0",
    "prettier": "^3.0.0",
    "raw-loader": "^4.0.2",
    "rimraf": "^5.0.1",
    "simple-progress-webpack-plugin": "^2.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-pnp-externals": "^1.1.0"
  },
  "nodemonConfig": {
    "exec": "yarn build:dev && node ./dist/index.js",
    "ext": "ts,tsx",
    "ignore": [
      "**/dist/**",
      "**/node_modules/**"
    ],
    "watch": "src"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix"
    ]
  }
}
